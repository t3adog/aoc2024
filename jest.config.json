{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s",
        "!**/*.spec.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "<rootDir>/main.ts"
    ],
    "testEnvironment": "node",
    "cacheDirectory": "../.jest-cache",
    "testTimeout": 120000
}